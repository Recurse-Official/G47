<body>
    <!-- Navigation -->
    <nav>
        <div class="nav-container">
            <div class="col-md-3 mb-2 mb-md-0">
                <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                    <img src="food.jpg" height="75px" width="190px" alt="Logo">
                </a>
              </div>
            <!-- <div class="logo">
                <img height="5rem" width="5rem" src="food.jpg" alt="Logo">
