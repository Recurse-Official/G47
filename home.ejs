    <section class="hero-section">
        <div class="hero-content">

            <h1>Share Food, Share Love</h1>

            <h1 style="font-weight: 600;">Chose your path</h1>
            <p class="p">Connecting excess food from conventions and hotels with those who need it most.</p>
            <div class="cta-buttons">
                <a href="/donate" class="btn primary">Ways to Donate</a>
                <a href="/receive" class="btn secondary">Ways to Receive</a>
            </div>
        </div>
    </section>


    <!-- Statistics Section -->
    <section class="statistics">
        <h2>The Current Situation</h2>
        <p class="subtitle">Understanding the scale of food waste and hunger in India</p>

        <div class="stats-container">
            <div class="stat-card">
                <canvas id="wasteChart"></canvas>
                <h3>Food Waste</h3>
                <p class="stat-value">68.7M</p>
                <p class="stat-desc">Annual food waste in tonnes</p>
            </div>
            <div class="stat-card">
                <canvas id="fundingChart"></canvas>
                <h3>Underfunded Facilities</h3>
                <p class="stat-value">62%</p>
                <p class="stat-desc">Orphanages receiving insufficient funds</p>
            </div>
            <div class="stat-card">
                <canvas id="impactChart"></canvas>
                <h3>Potential Impact</h3>
                <p class="stat-value">1.3M</p>
                <p class="stat-desc">Potential meals saved annually</p>
            </div>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="mission">
        <div class="mission-content">
            <h2>Our Mission</h2>
            <p>We believe that no food should go to waste while people go hungry. Our platform connects food donors with
                those in need, creating a sustainable solution to food waste and hunger.</p>
            <div class="mission-stats">
                <div class="mission-stat">
                    <h3>100+</h3>
                    <p>Partner Hotels</p>
                </div>
                <div class="mission-stat">
                    <h3>50+</h3>
                    <p>Orphanages</p>
                </div>
                <div class="mission-stat">
                    <h3>10+</h3>
                    <p>Cities</p>
                </div>
            </div>
        </div>
    </section>


    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>Sharing Surplus</h3>
                <p>Connecting hearts through food donation</p>
            </div>
            <div class="footer-section">
